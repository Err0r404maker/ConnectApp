# База данных
DATABASE_URL="postgresql://username:password@localhost:5432/college_messenger"
REDIS_URL="redis://localhost:6379"

# JWT секреты (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ В ПРОДАКШЕНЕ!)
JWT_SECRET="your-super-secret-jwt-key-32-chars-min"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-32-chars"

# Сервер
PORT=3001
NODE_ENV=development

# Файлы
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGIN="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Демо пользователи (для тестирования)
DEMO_EMAIL="demo@example.com"
DEMO_PASSWORD="changeme123"
TEST_STUDENT_EMAIL="student@example.com"
TEST_STUDENT_PASSWORD="student123"
TEST_TEACHER_EMAIL="teacher@example.com"
TEST_TEACHER_PASSWORD="teacher123"

# Безопасность
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET="your-session-secret-key"

# Логирование
LOG_LEVEL=info
LOG_FILE="./logs/app.log"